{
    "name": "omt",
    "displayName": "OMT & ODT",
    "description": "OMT & ODT Language Support",
    "version": "1.0.1",
    "repository": {
        "type": "git",
        "url": "https://github.com/pcmill/omt-vscode.git"
    },
    "publisher": "OPP",
    "engines": {
        "vscode": "^1.23.0"
    },
    "author":{
        "name": "Team Bluefingers"
    },
    "categories": [
        "Programming Languages",
        "Snippets"
    ],
    "contributes": {
        "languages": [{
            "id": "omt",
            "aliases": ["OMT", "odt"],
            "extensions": [".omt",".odt"],
            "configuration": "./language-configuration.json"
        }],
        "grammars": [{
            "language": "omt",
            "scopeName": "source.omt",
            "path": "./syntaxes/OMT.tmLanguage.json"
        }],
        "themes": [
            {
                "label": "OMT Sub Theme",
                "uiTheme": "vs-dark",
                "path": "./themes/omt-sub.json"
            }
        ],
        "snippets": [
            {
                "language": "omt",
                "path": "./snippets/omt.json"
            },
            {
                "language": "omt",
                "path": "./snippets/odt.json"
            }
        ]
    }
}